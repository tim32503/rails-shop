<h1>產品列表</h1>

<table>
  <tr>
    <th>名稱</th>
    <th>價格</th>
    <th>庫存</th>
    <th>動作</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.inventory %></td>
      <td>
        <%= button_to '加入購物車', purchase_product_path(product) %>
      </td>
    </tr>
  <% end %>
 </table> 